<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5sp"
    app:cardCornerRadius="15sp"
    android:layout_marginTop="15sp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_margin="5sp">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10sp"
            android:src="@drawable/ic_sharp_insert_drive_file_90"
            />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="70sp"
            android:maxWidth="200sp"
            android:layout_toRightOf="@id/card_image"
            android:layout_marginLeft="10sp"
            android:textColor="@color/black"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"/>

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/card_image"
            android:layout_marginLeft="10sp"
            android:layout_below="@id/card_title"
            android:layout_marginTop="5sp"
            android:text="Date"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/card_share"
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/ic_outline_share_24"/>

        <ImageView
            android:id="@+id/card_unselected"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5sp"
            android:src="@drawable/ic_round_check_box_outline_blank_50"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/card_selected"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5sp"
            android:src="@drawable/ic_round_check_box_40"
            android:visibility="invisible"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>