<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityTutorial2">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recview_tutorial2"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="#dedede"
        android:layout_below="@id/page_sort_tutorial"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/page_search_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sharp_search_30"/>

    <ImageView
        android:id="@+id/page_sort_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sharp_sort_30"/>

    <ImageView
        android:id="@+id/select_items_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_round_check_box_outline_blank_30"/>

    <ImageView
        android:id="@+id/arrow6"
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-30dp"
        android:src="@drawable/ic_arrow_up"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-95dp"
        android:text="Tap this\nbutton to\nshare the file\nas pdf or\nall files inside\nas separate jpgs."
        android:textSize="20dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"/>

    <ImageView
        android:id="@+id/arrow7"
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_marginTop="-15dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="-10dp"
        android:src="@drawable/ic_arrow_up"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow7"
        android:layout_marginTop="-100dp"
        android:layout_centerHorizontal="true"
        android:text="Tap the title to change it"
        android:textSize="20dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Long tap the item\nto select it and\nSingle tap to view\nthe items within"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"
        android:layout_below="@id/page_search_tutorial"
        android:layout_marginTop="120dp"/>

    <ImageButton
        android:id="@+id/card_select_all_tutorial"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_sharp_select_all_50"
        android:elevation="10dp"
        />

    <ImageView
        android:id="@+id/arrow5"
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:layout_marginBottom="-15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:src="@drawable/ic_arrow_down"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/arrow5"
        android:layout_marginBottom="-115dp"
        android:layout_marginStart="20dp"
        android:text="Once selection\nstarts, tap\nthis to select\n all items"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"/>

    <TextView
        android:id="@+id/tutorial2_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="70dp"
        android:text="Next"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:fontFamily="@font/amaranth"/>

    <ImageView
        android:id="@+id/tutorial2_next_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_arrow_right_alt_24"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/exit_tut2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:text="Exit\nTutorial"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:fontFamily="@font/amaranth"/>

</RelativeLayout>