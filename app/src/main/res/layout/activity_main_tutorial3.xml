<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityTutorial3">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recview_tutorial"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:background="#dedede"
        android:layout_below="@id/page_sort_tutorial"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/page_search_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sharp_search_30"/>

    <ImageView
        android:id="@+id/page_sort_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sharp_sort_30"/>

    <ImageView
        android:id="@+id/select_items_tutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_round_check_box_outline_blank_30"/>

    <ImageButton
        android:id="@+id/card_add_tutorial"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_round_add_50"
        android:elevation="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_top_right"
        android:layout_marginTop="-275dp"
        android:layout_marginStart="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/page_search_tutorial"
        android:layout_marginTop="60dp"
        android:layout_marginStart="110dp"
        android:text="Tap this button\n to give feedback\n about the app"
        android:textSize="21dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"/>

    <TextView
        android:id="@+id/tutorial3_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="80dp"
        android:text="Next"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"/>

    <ImageView
        android:id="@+id/tutorial3_next_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_arrow_right_alt_24"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="40dp"/>

    <TextView
        android:id="@+id/exit_tut3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="30dp"
        android:text="Exit\nTutorial"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:fontFamily="@font/amaranth"/>

</RelativeLayout>