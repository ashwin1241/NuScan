<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/searchfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="50sp"
        android:padding="10sp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/search_cancel"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:src="@drawable/ic_sharp_cancel_20"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/page_search"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_sharp_search_30"/>

    <ImageView
        android:id="@+id/selection_cancel"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_outline_cancel_40"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/page_sort"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_sharp_sort_30"/>

    <ImageView
        android:id="@+id/select_items"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:src="@drawable/ic_round_check_box_outline_blank_30"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recview"
        android:layout_width="match_parent"
        android:layout_height="640sp"
        android:background="#dedede"
        android:layout_below="@id/page_sort"
        android:layout_marginTop="10sp"
        />

    <ImageButton
        android:id="@+id/card_add"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_round_add_50"
        android:elevation="10sp"
        />

    <ImageButton
        android:id="@+id/card_select_all"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20sp"
        android:layout_marginStart="60sp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_sharp_select_all_50"
        android:elevation="10sp"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/card_share_multiple"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20sp"
        android:layout_marginEnd="60sp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_outline_share_241"
        android:elevation="10sp"
        android:visibility="invisible"
        />

    <ImageButton
        android:id="@+id/card_delete"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FF0000"
        android:layout_marginBottom="20sp"
        android:background="@drawable/custom_button_shape"
        android:src="@drawable/ic_outline_delete_60"
        android:elevation="10sp"
        android:visibility="invisible"/>

</RelativeLayout>