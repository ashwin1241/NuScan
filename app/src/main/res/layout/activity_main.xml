<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/page_search"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_sharp_search_30"/>

    <ImageView
        android:id="@+id/page_sort"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_sharp_sort_30"/>

    <ImageView
        android:id="@+id/select_items"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:src="@drawable/ic_round_check_box_outline_blank_30"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recview"
        android:layout_width="match_parent"
        android:layout_height="640sp"
        android:background="#dedede"
        android:layout_below="@id/page_sort"
        android:layout_marginTop="10sp"
        />

</RelativeLayout>